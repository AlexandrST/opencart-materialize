{{ header }}
{% spaceless %}
<script type="application/ld+json">
{
	"@context": "http://schema.org",
	"@type": "BreadcrumbList",
	"itemListElement": [
	{% for key, breadcrumb in breadcrumbs %}
		{% if key < breadcrumbs|length - 1 %}
			{% if key == 0 %}
			{% else %}
			{
				"@type": "ListItem",
				"position": {{ key }},
				"item": {
					"@id": "{{ breadcrumb.href }}",
					"name": "{{ breadcrumb.text }}"
				}
			},
			{% endif %}
		{% else %}
			{
				"@type": "ListItem",
				"position": {{ key }},
				"item": {
					"@id": "{{ breadcrumb.href }}",
					"name": "{{ breadcrumb.text }}"
				}
			}
		{% endif %}
	{% endfor %}
	]
}
</script>
{% if column_left and column_right %}
	{% set main = 's12 l6' %}
{% elseif column_left or column_right %}
	{% set main = 's12 l9' %}
{% else %}
	{% set main = 's12' %}
{% endif %}
<main>
	<div class="container">
		<nav id="breadcrumbs" class="breadcrumb-wrapper transparent z-depth-0">
			<div class="nav-wrapper breadcrumb-wrap href-underline">
				{% for key, breadcrumb in breadcrumbs %}
					{% if key < breadcrumbs|length - 1 %}
						{% if key == 0 %}
						<a href="{{ breadcrumb.href }}" class="breadcrumb waves-effect black-text"><i class="material-icons">home</i></a>
						{% else %}
						<a href="{{ breadcrumb.href }}" class="breadcrumb waves-effect black-text">{{ breadcrumb.text }}</a>
						{% endif %}
					{% else %}
						<span class="breadcrumb blue-grey-text text-darken-3">{{ breadcrumb.text }}</span>
					{% endif %}
				{% endfor %}
			</div>
		</nav>
		<h1>{{ heading_title }}</h1>
		<div class="row">
			{{ column_left }}
			<div id="content" class="col {{ main }}">
				{{ content_top }}
				<div class="card-panel">
					<div class="section" style="overflow-x:scroll;">
						<table class="bordered">
							<thead class="grey lighten-4">
								<tr>
									<th colspan="2"><small>{{ text_order_detail }}</small></th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td style="width:50%;">
										{% invoice_no %}
										<b>{{ text_invoice_no }}</b> {{ invoice_no }}<br>
										{% endif %}
										<b>{{ text_order_id }}</b> #{{ order_id }}<br>
										<b>{{ text_date_added }}</b> {{ date_added }}
									</td>
									<td style="width:50%;">
										{% if payment_method %}
										<b>{{ text_payment_method }}</b> {{ payment_method }}<br>
										{% endif %}
										{% if shipping_method %}
										<b>{{ text_shipping_method }}</b> {{ shipping_method }}
										{% endif %}
									</td>
								</tr>
							</tbody>
						</table>
					</div>
					<div class="section" style="overflow-x:scroll;">
						<table class="bordered">
							<thead class="grey lighten-4">
								<tr>
									<th style="width:50%;"><small>{{ text_payment_address }}</small></th>
									{% if text_shipping_address %}
									<th style="width:50%;"><small>{{ text_shipping_address }}</small></th>
									{% endif %}
								</tr>
							</thead>
							<tbody>
								<tr>
									<td>{{ payment_address }}</td>
									{% if shipping_address %}
									<td>{{ shipping_address }}</td>
									{% endif %}
								</tr>
							</tbody>
						</table>
					</div>
					<div class="section" style="overflow-x:scroll;">
						<table class="bordered centered">
							<thead class="grey lighten-4">
								<tr>
									<th><small>{{ column_name }}</small></th>
									<th><small>{{ column_model }}</small></th>
									<th><small>{{ column_quantity }}</small></th>
									<th><small>{{ column_price }}</small></th>
									<th><small>{{ column_total }}</small></th>
									{% if products %}
									<th style="width:20%;"><small>&nbsp;</small></th>
									{% endif %}
								</tr>
							</thead>
							<tbody>
								{% for product in products %}
								<tr>
									<td>
										{{ product.name }}>
										{% for option in product.option %}
										<br>
										&nbsp;<small> â€“ {{ option.name }}: {{ option.value }}</small>
										{% endfor %}
									</td>
									<td>{{ product.model }}</td>
									<td>{{ product.quantity }}</td>
									<td>{{ product.price }}</td>
									<td>{{ product.total }}</td>
									<td>
										{% if product.reorder %}
										<a href="{{ product.reorder }}" title="{{ button_reorder }}" class="btn waves-effect waves-light blue"><i class="material-icons">add_shopping_cart</i></a>
										{% endif %}
										<a href="{{ product.return }}" title="{{ button_return }}" class="btn waves-effect waves-light red"><i class="material-icons">cached</i></a>
									</td>
								</tr>
								{% endfor %}
							</tbody>
							<tfoot>
							{% for total in totals %}
								<tr>
									<td colspan="3"></td>
									<td><b>{{ total.title }}</b></td>
									<td>{{ total.text }}</td>
									{% if products %}
									<td></td>
									{% endif %}
								</tr>
							{% endfor %}
							</tfoot>
						</table>
						{% if comment %}
						<table class="bordered centered">
							<thead>
								<tr>
									<th>{{ text_comment }}</th>
								</tr>
							</thead>
							<tbody>
								<tr>
									<td>{{ comment }}</td>
								</tr>
							</tbody>
						</table>
						{% endif %}
						{% if histories %}
						<h3>{{ text_history }}</h3>
						<table class="bordered centered">
							<thead>
								<tr>
									<th>{{ column_date_added }}</th>
									<th>{{ column_status }}</th>
									<th>{{ column_comment }}</th>
								</tr>
							</thead>
							<tbody>
								{% if histories %}
								{% for history in histories %}
								<tr>
									<td>{{ history.date_added }}</td>
									<td>{{ history.status }}</td>
									<td>{{ history.comment }}</td>
								</tr>
								{% endfor %}
								{% else %}
								<tr>
									<td colspan="3">{{ text_no_results }}</td>
								</tr>
								{% endif %}
							</tbody>
						</table>
						{% endif %}
					</div>
					<div class="flex-reverse">
						<a href="{{ continue }}" class="btn waves-effect waves-light red href-underline">{{ button_continue }}</a>
					</div>
				</div>
				{{ content_bottom }}
			</div>
			{{ column_right }}
		</div>
	</div>
</main>
<script>
document.addEventListener("DOMContentLoaded", function(event) {
	{% if success %}
		Materialize.toast('{{ success }}',7000)
	{% endif %}
	{% if error_warning %}
		Materialize.toast('{{ error_warning }}',7000)
	{% endif %}
});
</script>
{% endspaceless %}
{{ footer }}
{% if categories %}
<div id="fixed-nav-wrapper">
	<div id="{{ module_megamenu_fix ? 'header-navigation' }}" class="hide-on-small-only pin-top width-max z-depth-2 {{ color_navigation }}">
		<div class="{{ module_megamenu_center ? 'container' }}">
			<div class="row no-margin-bottom">
				<div class="col s12">
					<nav class="transparent z-depth-0">
						<ul class="sf-menu">
							{% if module_megamenu_home %}<li><a href="{{ module_megamenu_home }}" class="waves-effect"><i class="material-icons">home</i></a></li>{% endif %}
							{% for category_1 in categories %}
								{% if category_1.children %}
									{% if module_megamenu_category[category_1.category_id].megamenu %}
									<li class="mega-dropdown-parent">
										<a href="{{ category_1.href }}" class="dropdown-with-child dropdown-child-down waves-effect">{{ category_1.name }}</a>
										<div class="sf-mega white black-text z-depth-2">
											<div class="row">
												{% if not module_megamenu_category[category_1.category_id].type == 0 %}
													{% set categoires_block, side_block = 'm8', 'm4' %}
												{% else %}
													{% set categoires_block, side_block = 'm12', '' %}
												{% endif %}
												<div class="col {{ categoires_block }}">
													<div class="sf-mega-wrapper">
														{% if module_megamenu_category_title %}
														<a href="{{ category_1.href }}" class="mega-title">{{ category_1.name }}</a>
														{% endif %}
														<div class="row">
															{% for category_2 in category_1.children %}
															<div class="col m12 l6">
																<div class="sf-mega-list-wrapper">
																	<div class="sf-mega-list">
																		{% if category_2.image %}<img class="responsive-img circle lazyload" src="{{ img_loader }}" data-src="{{ category_2.image }}" alt="{{ category_2.title }}">{% endif %}
																		<a href="{{ category_2.href }}" class="sf-mega-list__title text-bold">{{ category_2.name }}</a>
																		<div class="divider"></div>
																		{% if category_2.children %}
																		<ul>
																			{% for category_3 in category_2.children %}
																			<li><a href="{{ category_3.href }}">{{ category_3.name }}</a></li>
																			{% endfor %}
																		</ul>
																		{% endif %}
																	</div>
																</div>
															</div>
															{% endfor %}
															<div class="clearfix"></div> <!-- After every second -->
														</div>
													</div>
												</div>
												{% if category_1.category_type %}
												<div class="col {{ side_block }}">
													{% if module_megamenu_category[category_1.category_id].type == 'image' %}
													<div class="megamenu-sideblock">
														<img class="responsive-img lazyload" src="{{ img_loader }}" data-src="{{ category_1.category_type }}" alt="{{ category_1.name }}" title="{{ category_1.name }}">
													</div>
													{% elseif module_megamenu_category[category_1.category_id].type == 'banner' %}
													<div class="megamenu-sideblock__slideshow">
														<div class="megamenu-slideshow">
															{% for banner in category_1.category_type %}
															<div>
																{% if banner.link %}
																<a href="{{ banner.link }}"><img src="{{ banner.image }}" alt="{{ banner.title }}"></a>
																{% else %}
																<img src="{{ banner.image }}" alt="{{ banner.title }}">
																{% endif %}
															</div>
															{% endfor %}
														</div>
													</div>
													<script>
													document.addEventListener("DOMContentLoaded", function(event) {
														$('.megamenu-slideshow').slick({
															autoplay: true,
															autoplaySpeed: 5000,
															fade: true,
															cssEase: 'linear'
														});
													});
													</script>
													{% elseif module_megamenu_category[category_1.category_id].type == 'manufacturers' %}
													<div class="megamenu-sideblock">
														<div class="megamenu-sideblock__manufacturers">
															{% for manufacturer in category_1.category_type %}
															<a href="{{ manufacturer.href }}" class="border-grey tooltipped" data-position="right" data-tooltip="{{ manufacturer.name }}"><img class="responsive-img lazyload" src="{{ img_loader }}" data-src="{{ manufacturer.image }}" alt="{{ manufacturer.name }}" title="{{ manufacturer.name }}"></a>
															{% endfor %}
														</div>
													</div>
													{% endif %}
												</div>
												{% endif %}
											</div>
											{% if module_megamenu_see_all %}
											<div class="section center">
												<a href="{{ category_1.href }}" class="btn-flat waves-effect margin-reset">{{ text_all }}</a>
											</div>
											{% endif %}
										</div>
									</li>
									{% else %}
									<li>
										<a href="{{ category_1.href }}" class="dropdown-with-child dropdown-child-down waves-effect">{{ category_1.name }}</a>
										<ul class="category-dropdown white z-depth-2">
											{% for category_2 in category_1.children %}
												{% if category_2.children %}
												<li>
													<a href="{{ category_2.href }}" class="dropdown-child-right waves-effect">{{ category_2.name }}</a>
													<ul class="white z-depth-2">
														{% for category_3 in category_2.children %}
														<li><a href="{{ category_3.href }}" class="waves-effect">{{ category_3.name }}</a></li>
														<li class="divider"></li>
														{% endfor %}
													</ul>
												</li>
												<li class="divider"></li>
												{% else %}
												<li><a href="{{ category_2.href }}" class="waves-effect">{{ category_2.name }}</a></li>
												<li class="divider"></li>
												{% endif %}
											{% endfor %}
										</ul>
									</li>
									{% endif %}
								{% else %}
								<li><a href="{{ category_1.href }}" class="waves-effect">{{ category_1.name }}</a></li>
								{% endif %}
							{% endfor %}
						</ul>
					</nav>
				</div>
			</div>
		</div>
	</div>
</div>
{% endif %}
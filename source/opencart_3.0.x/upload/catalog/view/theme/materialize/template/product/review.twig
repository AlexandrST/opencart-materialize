{% spaceless %}
{% if reviews %}
{% for review in reviews %}
<div class="card-panel">
	<div class="row valign-wrapper">
		<div class="col s4 m3 l2 center"><span class="flow-text text-bold">{{ review.author }}</span></div>
		<div class="col s8 m9 l10">
			<div class="rating">
				<hr>
				<div>
					<span class="white">
					{% for i in 1..5 %}
					{% if review.rating < i %}
					<i class="material-icons">star_border</i>
					{% else %}
					<i class="material-icons">star</i>
					{% endif %}
					{% endfor %}
					</span>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col s4 m3 l2 center">
			<img class="responsive-img lazyload" src="{{ img_loader }}" data-src="catalog/view/theme/materialize/image/comment.png" alt="{{ review.author }}" width="175" height="175">
		</div>
		<div class="col s8 m9 l10 grey lighten-3 z-depth-1 comment-body">
			<p class="text-bold">{{ review.date_added }}</p>
			<p class="section">{{ review.text }}</p>
		</div>
	</div>
</div>
{% endfor %}
{% if pagination %}
<div class="row">{{ pagination }}</div>
{% endif %}
{% else %}
<div class="card-panel center">
	<p class="flow-text text-bold">{{ text_no_reviews }}</p>
	<img class="responsive-img lazyload" src="{{ img_loader }}" data-src="catalog/view/theme/materialize/image/search-empty.png" alt="">
</div>
{% endif %}
{% endspaceless %}
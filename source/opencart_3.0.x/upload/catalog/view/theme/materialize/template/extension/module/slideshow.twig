<div class="section">
	<div id="slideshow{{ module }}" class="slick-slider slick-slider-slideshow">
	{% for banner in banners %}
		{% if banner.link %}
		<a href="{{ banner.link }}"><img class="z-depth-1" src="{{ banner.image }}" alt="{{ banner.title }}"></a>
		{% else %}
		<img class="z-depth-1" src="{{ banner.image }}" alt="{{ banner.title }}">
		{% endif %}
	{% endfor %}
	</div>
</div>
<script>
document.addEventListener("DOMContentLoaded", function(event) {
	$('.slick-slider').slick({
		infinite: true,
		autoplay: true,
		autoplaySpeed: 5000,
		slidesToShow: 1,
		adaptiveHeight: true,
		fade: true,
		cssEase: 'linear',
		dots: true,
		arrows: true,
		nextArrow: '<button class="slick-next waves-effect waves-circle" aria-label="Next" type="button">Next</button>',
		prevArrow: '<button class="slick-prev waves-effect waves-circle" aria-label="Previous" type="button">Previous</button>'
	});
});
</script>
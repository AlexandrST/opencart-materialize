{% if categories %}
<ul class="sf-menu">
	<li class="inherit">
		<a href="#!" id="main-dd-nav" class="text-uppercase white-text">{{ text_category }}</a>
		<ul class="main-category-dropdown white z-depth-2">
			{% for category_1 in categories %}
				{% if category_1.children %}
				<li class="inherit">
					<a href="{{ category_1.href }}" class="dropdown-child waves-effect">{{ category_1.name }}</a>
					<ul class="white z-depth-2">
					{% for category_2 in category_1.children %}
						{% if category_2.children %}
						<li>
							<a href="{{ category_2.href }}" class="dropdown-child waves-effect">{{ category_2.name }}</a>
							<ul class="white z-depth-2">
								{% for category_3 in category_2.children %}
								<li><a href="{{ category_3.href }}" class="waves-effect">{{ category_3.name }}</a></li>
								<li class="divider"></li>
								{% endfor %}
							</ul>
						</li>
						<li class="divider"></li>
						{% else %}
						<li><a href="{{ category_2.href }}" class="waves-effect">{{ category_2.name }}</a></li>
						<li class="divider"></li>
						{% endif %}
					{% endfor %}
					</ul>
				</li>
				<li class="divider"></li>
				{% else %}
				<li class="inherit"><a href="{{ category_1.href }}" class="waves-effect">{{ category_1.name }}</a></li>
				<li class="divider"></li>
				{% endif %}
			{% endfor %}
		</ul>
	</li>
</ul>
{% endif %}
{% if categories %}
<div class="hide-on-small-only width-max z-depth-2 {{ color_navigation }}">
	<div class="container">
		<div class="row no-margin-bottom">
			<div class="col s12">
				<nav class="transparent z-depth-0">
					<ul class="sf-menu">
						{% for category_1 in categories %}
						<li>
							<a href="{{ category_1.href }}" class="waves-effect {{ category_1.children ? ' dropdown-with-child dropdown-child-down' }}">{{ category_1.name }}</a>
							<ul class="category-dropdown white z-depth-2">
								{% for category_2 in category_1.children %}
									{% if category_2.children %}
									<li>
										<a href="{{ category_2.href }}" class="dropdown-child-right waves-effect">{{ category_2.name }}</a>
										<ul class="white z-depth-2">
											{% for category_3 in category_2.children %}
											<li><a href="{{ category_3.href }}" class="waves-effect">{{ category_3.name }}</a></li>
											<li class="divider"></li>
											{% endfor %}
										</ul>
									</li>
									<li class="divider"></li>
									{% else %}
									<li><a href="{{ category_2.href }}" class="waves-effect">{{ category_2.name }}</a></li>
									<li class="divider"></li>
									{% endif %}
								{% endfor %}
							</ul>
						</li>
						{% endfor %}
					</ul>
				</nav>
			</div>
		</div>
	</div>
</div>
{% endif %}
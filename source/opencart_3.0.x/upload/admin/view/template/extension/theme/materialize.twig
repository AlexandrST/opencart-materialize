																		<div class="media-body">
																			<h4 class="media-heading text-medium">{{ entry_footer_title }}</h4>
																			<hr>
																			<input type="text" name="theme_materialize_settings[footer][{{ language.language_id }}][title]" value="{{ theme_materialize_settings.footer[language.language_id] ? theme_materialize_settings.footer[language.language_id].title }}" placeholder="{{ entry_title }}" class="form-control" />
																		</div>
																	</div>
																</div>
																<div class="list-group-item">
																	<div class="media">
																		<div class="media-body">
																			<h4 class="media-heading text-medium">{{ entry_description }}</h4>
																			<hr>
																			<textarea name="theme_materialize_settings[footer][{{ language.language_id }}][description]" placeholder="{{ entry_description }}" class="form-control textarea-resize-vertical">{{ theme_materialize_settings.footer[language.language_id] ? theme_materialize_settings.footer[language.language_id].description }}</textarea>

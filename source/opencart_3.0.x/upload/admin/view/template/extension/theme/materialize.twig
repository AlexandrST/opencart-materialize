						<hr>
						<input type="text" name="theme_materialize_settings[favicon][manifest][name]" value="{{ theme_materialize_settings ? theme_materialize_settings.favicon.manifest.name }}" placeholder="Имя сайта" maxlength="45" class="form-control" />
					</div>
				</div>
			</div>

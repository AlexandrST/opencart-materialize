		html += '	</div>';
		html += '</div>';
		{% endfor %}

		modalBody.html(html);

		modalForAll.modal('show');

		$("input[name=\'create_color_scheme_value\']").change(function() {
			modalActionButton.removeClass().addClass('btn modal-action-button btn-primary').attr('data-action-scheme-remove', 'false').attr('data-action-scheme-id', this.value).prop('disabled', false);
		});
	});

	colorSchemeRemove.click(function() {
		var schemeId = $(this).data('scheme-id'),
			schemeTitle = $(this).text();

		modalHeader.removeClass().addClass('modal-header bg-danger');
		modalActionButton.removeClass().addClass('btn modal-action-button btn-danger').attr('data-action-scheme-remove', 'true').attr('data-action-scheme-id', schemeId).prop('disabled', false);
		modalTitle.text('Удалить ' + schemeTitle);
		modalBody.html('Данное действие приведёт к безвозвратному удалению цветовой схемы: <b>' + schemeTitle + '</b>. Вы уверены, что хотите продолжить?');

		modalForAll.modal('show');
	});

	colorSchemeRemoveAll.click(function() {
		modalHeader.removeClass().addClass('modal-header bg-danger');
		modalActionButton.removeClass().addClass('btn modal-action-button btn-danger').attr('data-action-scheme-remove', 'true').attr('data-action-scheme-id', 'false').prop('disabled', false);
		modalTitle.text('Удалить все цветовые схемы');
		modalBody.html('Данное действие приведёт к безвозвратному удалению <b>всех созданных цветовых схем!</b> Вы уверены, что хотите продолжить?');

		modalForAll.modal('show');
	});

	$(document).on('click', '.modal-action-button', function() {
		var actionSchemeId = $(this).attr('data-action-scheme-id'),
			actionRemove = $(this).attr('data-action-scheme-remove');

		if ((actionSchemeId != 'false') && (actionRemove == 'false')) {
			$.ajax({
				url: 'index.php?route=extension/theme/materialize/colorSchemeCreate&scheme_id=' + actionSchemeId + '&user_token={{ user_token }}',
				type: 'post',
				dataType: 'json',
				beforeSend: function() {
					modalForAll.modal('hide');
					colorSchemeCreateButton.button('loading');
					colorSchemeCreateWrap.append('<div class="loader-wrapper"><div class="showbox"><div class="loader"><svg class="circular" viewBox="25 25 50 50"><circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10"/></svg></div></div></div>');
				},
				complete: function() {
					colorSchemeCreateButton.button('reset');
				},
				success: function(json) {
					createSchemeWrapBtn.hide();
					colorSchemeCreateWrap.html(json);
				},
				error: function(xhr, ajaxOptions, thrownError) {
					alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
				}
			});
		} else if ((actionSchemeId != 'false') && (actionRemove == 'true')) {
			$.ajax({
				url: 'index.php?route=extension/theme/materialize/colorSchemeDeleteById&scheme_id=' + actionSchemeId + '&user_token={{ user_token }}',
				dataType: 'json',
				success: function(json) {
					if (json['success']) {
						applyBtn.trigger('click');
					}
				},
				error: function(xhr, ajaxOptions, thrownError) {
					alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
				}
			});
		} else if ((actionSchemeId == 'false') && (actionRemove == 'true')) {
			$.ajax({
				url: 'index.php?route=extension/theme/materialize/colorSchemesDeleteAll&user_token={{ user_token }}',
				dataType: 'json',
				success: function(json) {
					if (json['success']) {
						applyBtn.trigger('click');
					}
				},
				error: function(xhr, ajaxOptions, thrownError) {
					alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
				}
			});
		}
	});

	// Apply button
	var applyBtn = $('#apply-btn'),
		formMaterialize = $('#form-theme-materialize'),
		dataAction = formMaterialize.attr('data-action');

	if (sessionStorage['index_p']) {
		var index_p = sessionStorage['index_p'];
	} else {
		var index_p = 0;
	}

	$('#apply-tab li:eq(' + index_p + ') a').tab('show');

	sessionStorage['index_p'] = 0;

	applyBtn.click(function() {
		sessionStorage['index_p'] = $(".nav-tabs .active").index();

		formMaterialize.attr({'action':dataAction});
		formMaterialize.submit();

		e.preventDefault();
	});

	document.addEventListener("keydown", function(event) {
		if (event.keyCode == 83 && (navigator.platform.match("Mac") ? event.metaKey : event.ctrlKey)) {
			event.preventDefault();
			applyBtn.trigger('click');
		}
	}, false);

	// Notify
	{% for error in errors %}
	errorNotification({
		message: '{{ error }}'
	});
	{% endfor %}
	{% if success %}
	successNotification({
		message: '{{ success }}'
	});
	{% endif %}
</script>

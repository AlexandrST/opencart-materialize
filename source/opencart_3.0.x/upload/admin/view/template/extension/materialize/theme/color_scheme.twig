		selectCustomScheme = $('#select-custom-scheme-hex'),
		inputCustomScheme = $('#input-custom-scheme-hex');

	selectCustomScheme.change(function() {
		selectCustomSchemeOption = $("#select-custom-scheme-hex option:selected");

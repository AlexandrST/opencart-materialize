		inputCustomScheme.attr('value',valueHex);
	});

	selectBrowserBar.change(function() {
		selectBrowserBarOption = $("#select-color-browser-bar option:selected");
		valueHex = selectBrowserBarOption.data('hex');
		inputBrowserBar.attr('value',valueHex);
	});

	selectMobileMenu.change(function() {
		selectMobileMenuOption = $("#select-color-mobile-menu option:selected");
		valueHex = selectMobileMenuOption.data('hex');
		inputMobileMenu.attr('value',valueHex);
	});

	var materializeColors = $('.materialize-colors');

	materializeColors.each(function() {
		var currentBackground = $(this).find('option:selected.select-color').data('hex'),
			currentColor = $(this).find('option:selected.select-color-text').data('hex');

		$(this).find('.materialize-color-thumbnail').css({
